<mapper namespace="com.zy.nut.services.dao.UserDao">

    <resultMap id="user" type="com.zy.nut.relayer.server.beans.User"/>

    <insert id="save" parameterType="com.zy.nut.relayer.server.beans.User" useGeneratedKeys="true" keyColumn="uid" keyProperty="uid">
        INSERT INTO USER (uid,uname,age,login_time,ip)
        VALUES (#{uid},#{uname},#{age},#{loginTime},#{ip})
    </insert>
    
    <select id="selectAll" resultType="com.zy.nut.relayer.server.beans.User">
        SELECT uid,uname,age,login_time,ip FROM USER
    </select>

    <delete id="delAll" >
        DELETE FROM USER
    </delete>
